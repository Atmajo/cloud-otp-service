generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id @unique @default(cuid())
  phone String @unique

  otp otp[]
}

model otp {
  id         String  @id @unique @default(cuid())
  otp        String  @unique
  isVerified Boolean @default(false)
  user       User    @relation(fields: [userId], references: [id])
  userId     String
}
